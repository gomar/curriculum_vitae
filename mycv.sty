\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mycv}[2013/07/18, init]

\RequirePackage[latin1]{inputenc}

% ==========================
% = Helvetica Neue as font =
% ==========================
% quiet kills all warnings
\RequirePackage{fontspec}
% bs I don't know why
\defaultfontfeatures{Mapping=tex-text}
% main font as Helvetica Neue Light
\setmainfont[Mapping=tex-text]{Helvetica Neue Light}
% heading font is Helvetica Neue
\newfontfamily\headingfont[]{Helvetica Neue}
% section title to huge
\RequirePackage{sectsty}
\sectionfont{\LARGE}
\RequirePackage{relsize}

% ====================
% = Document margins =
% ====================
\RequirePackage[margin=20pt]{geometry}

% ===================
% = Specific tables =
% ===================
% defining table columns width
\RequirePackage{array}
% left width is 0.10
\newcolumntype{L}{>{\raggedleft}p{0.13\textwidth}}
% right width is 0.84
\newcolumntype{R}{p{0.80\textwidth}}

% =================================
% = NEW COMMANDS AND ENVIRONMENTS =
% =================================
% sections
\newcommand{\mysec}[1]{\section*{\textnormal{\quad\quad\quad\quad #1}}}
% table entry
\newcommand{\tblentry}[2]{\headingfont {#1} & #2}
% table with vertical black rule
\newenvironment{mytable}{
\begin{tabular}{L! {\color{black}\vrule width 1pt} R}}{
\end{tabular}}
% space betwenn two rows
\newcommand{\spacerows}{\vspace*{0.5em}}

% ==========
% = OTHERS =
% ==========
% adding url with the same font
\RequirePackage{url}
\RequirePackage{hyperref}
\hypersetup{colorlinks=false}
\urlstyle{same}
% multirow
\RequirePackage{multirow}
% removing bibliography section
\renewcommand\refname{}
% removing page numbering
\pagestyle{empty}